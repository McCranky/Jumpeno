@inject NavigationManager Navigation
<AuthorizeView>
    <Authorized>
        <div style="position: fixed; top: 3px; left: 3px;">
            <i class="fas fa-user-ninja fa-3x" style="color: limegreen;" @onclick="ToAccountPage"></i>
            <p>@context.User.Identity.Name</p>
        </div>
    </Authorized>
    <NotAuthorized>
        <div style="position: fixed; top: 3px; left: 3px;">
            <i class="fas fa-user-ninja fa-3x" @onclick="ToLoginPage"></i>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    protected void ToLoginPage() {
        Navigation.NavigateTo("Identity/Account/Login", true);
    }
    protected void ToAccountPage() {
        Navigation.NavigateTo("Identity/Account/Manage", true);
    }
}